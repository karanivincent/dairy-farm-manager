# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=farm_user
DATABASE_PASSWORD=farm_pass
DATABASE_NAME=farm_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# Email (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@dailyfarmmanager.com

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn

# API Documentation
SWAGGER_TITLE=Daily Farm Manager API
SWAGGER_DESCRIPTION=API documentation for dairy farm management system
SWAGGER_VERSION=1.0
SWAGGER_PATH=api-docs